<UserControl
    x:Class="CodeOutputPlugin.Views.CodeRootSelectionDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CodeOutputPlugin.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="SelectionButtonGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Name="FirstColumn" Width="{Binding FirstGridLength}" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="Label"
                MinWidth="100"
                Padding="4,4,4,0"
                VerticalAlignment="Center"
                TextWrapping="Wrap">
                Property Label:
            </TextBlock>

            <Button
                x:Name="UseDotDotPathButton"
                Grid.Column="1"
                Click="UseDotDotPathButton_Click">
                Use ../../File Location
            </Button>
            <Button
                x:Name="OpenFileLocationButton"
                Grid.Column="2"
                Width="32"
                Click="OpenFileLocationButton_Click">
                ...
            </Button>
        </Grid>
    </Grid>
</UserControl>
