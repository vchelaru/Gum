<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageId>Gum.SkiaSharp</PackageId>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Version>2026.1.24.1</Version>

		<NoWarn>1591</NoWarn>

		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<Configurations>Debug;Release;Release_No_Diagnostics</Configurations>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>TRACE;SKIA;FULL_DIAGNOSTICS</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants>TRACE;SKIA;FULL_DIAGNOSTICS</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release_No_Diagnostics|AnyCPU'">
	  <DefineConstants>TRACE;SKIA</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release_No_Diagnostics|AnyCPU'">
	  <DefineConstants>TRACE;SKIA</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="Content\LoaderManager.cs" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="..\..\Gum\RenderingLibrary\IPositionedSizedObjectExtensionMethods.cs">
			<Link>RenderingLibrary\IPositionedSizedObjectExtensionMethods.cs</Link>
		</Compile>
		<Compile Include="..\..\Gum\SvgPlugin\Managers\DefaultStateManager.cs" Link="DefaultStateManager.cs" />

	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="SkiaSharp" Version="3.119.1" />
		<PackageReference Include="SkiaSharp.Extended" Version="3.0.0" />
		<PackageReference Include="SkiaSharp.Skottie" Version="3.119.1" />
		<PackageReference Include="Svg.Skia" Version="1.0.0.19" />
		<PackageReference Include="Topten.RichTextKit" Version="0.4.167" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\GumCommon\GumCommon.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Folder Include="Xna\" />
	</ItemGroup>

</Project>
