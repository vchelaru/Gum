                            <!--     </ContextMenu> -->
                            <!-- </Border.ContextMenu> -->
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="TextElement.Foreground" Value="{DynamicResource Frb.Brushes.Foreground}" />
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource Frb.Surface01}" />

                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource Frb.Brushes.Surface01}" />
                            <Setter TargetName="Border" Property="CornerRadius" Value="0" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Panel.ZIndex" Value="100" />
                            <Setter Property="TextElement.Foreground" Value="{DynamicResource Frb.Brushes.ThemeContrast}" />
                            <Setter Property="TextElement.FontWeight" Value="Medium"/>
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource Frb.Surface01}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource Frb.Brushes.Primary}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="MainTabControl.ItemTemplate" DataType="{x:Type plugins:PluginTab}">
        <ContentControl Margin="6,0,6,0">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="Content">
                        <Setter.Value>
                            <StackPanel Orientation="Horizontal" SnapsToDevicePixels="True">
                                <TextBlock
                                    Margin="0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Title}" />
                                <Button
                                    Width="14"
                                    Height="14"
                                    Margin="6,0,-1,0"
                                    Padding="0"
                                    BorderThickness="0"
                                    Command="{Binding CloseCommand}"
                                    Content="{materialDesign:PackIcon close}"
                                    SnapsToDevicePixels="True">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource IconButton}" TargetType="{x:Type Button}">
                                            <Setter Property="Foreground" Value="{DynamicResource Frb.Brushes.Foreground.Subtle}" />
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CustomHeaderContent, Converter={StaticResource NotNullToBoolConverter}}" Value="True">
                            <Setter Property="Content" Value="{Binding CustomHeaderContent}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

    </DataTemplate>

    <Style
        x:Key="MainTabControl.Style"
        BasedOn="{StaticResource {x:Type TabControl}}"
        TargetType="TabControl">
        <Setter Property="ItemContainerStyle" Value="{StaticResource MainTabControl.MainTabItem.Style}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Darken}" />
        <Setter Property="ItemTemplate" Value="{DynamicResource MainTabControl.ItemTemplate}" />
        <Setter Property="ContentTemplate" Value="{StaticResource MainTabControl.ContentTemplate}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Margin" Value="0,2,0,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TabPanel
                            Name="HeaderPanel"
                            Background="Transparent"
                            IsItemsHost="True" />

                        <!--  Define the TabPanel and ItemsPresenter here as needed  -->
                        <Border
                            x:Name="PART_SelectedContentHost"
                            Grid.Row="1"
                            Padding="0"
                            Background="{DynamicResource Frb.Surface01}"
                            BorderBrush="{DynamicResource Darken}"
                            BorderThickness="0"
                            CornerRadius="0">
                            <ContentPresenter ContentSource="SelectedContent" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
