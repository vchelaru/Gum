                            Margin="0,0,0,0"
                            Padding="0,1,0,5"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0,2,0,0"
                            CornerRadius="0,0,0,0">
                            <ContentPresenter
                                x:Name="ContentSite"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Header"
                                RecognizesAccessKey="True" />
