<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Gum.Converters"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:plugins="clr-namespace:Gum.Plugins"
    xmlns:themes="clr-namespace:FlatRedBall.Glue.Themes">

    <DataTemplate x:Key="MainTabControl.ContentTemplate" DataType="{x:Type plugins:PluginTab}">
        <ContentPresenter Content="{Binding Content}" />
    </DataTemplate>

