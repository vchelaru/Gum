<Window
    x:Class="Gum.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Gum.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Gum.ViewModels"
    Title="{Binding Title}"
    Width="{Binding Width, Mode=TwoWay}"
    Height="{Binding Height, Mode=TwoWay}"
    d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
    Left="{Binding Left, Mode=TwoWay}"
    SizeToContent="Manual"
    Top="{Binding Top, Mode=TwoWay}"
    WindowState="{Binding WindowState, Mode=TwoWay}"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <WindowsFormsHost x:Name="WinformsMenuHost" />
            <controls:MainPanelControl
                Grid.Row="1"
                DataContext="{Binding MainPanelViewModel}"
                IsToolsVisible="{Binding IsToolsVisible}" />
        </Grid>
    </Grid>

</Window>