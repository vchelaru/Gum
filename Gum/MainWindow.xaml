<controlzex:WindowChromeWindow
  x:Class="Gum.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:behaviors="clr-namespace:Gum.Behaviors"
  xmlns:controls="clr-namespace:Gum.Controls"
  xmlns:controlzex="urn:controlzex"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:gum="clr-namespace:Gum"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:themes="clr-namespace:FlatRedBall.Glue.Themes"
  xmlns:viewModels="clr-namespace:Gum.ViewModels"
  xmlns:wpf="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
  x:Name="Root"
  Title="{Binding Title}"
  Width="{Binding Width, Mode=TwoWay, FallbackValue=1280}"
  Height="{Binding Height, Mode=TwoWay, FallbackValue=720}"
  d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
  AllowsTransparency="False"
  Background="{DynamicResource Frb.Brushes.Border}"
  CaptionButtonsSize="48,32"
  CornerPreference="Round"
  GlassFrameThickness="0"
  IgnoreTaskbarOnMaximize="False"
  Left="{Binding Left, Mode=TwoWay}"
  ResizeBorderThickness="8"
  SizeToContent="Manual"
  SnapsToDevicePixels="True"
  Top="{Binding Top, Mode=TwoWay}"
  UseLayoutRounding="True"
  WindowStartupLocation="CenterScreen"
  WindowState="{Binding WindowState, Mode=TwoWay}"
  mc:Ignorable="d">
  <Border
    Background="{DynamicResource Frb.Brushes.Background}"
    BorderBrush="{DynamicResource Frb.Brushes.Border}"
    ClipToBounds="True">
    <Border.Style>
      <Style TargetType="Border">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BorderThickness" Value="1" />
        <Style.Triggers>
          <DataTrigger Binding="{Binding WindowState}" Value="{x:Static WindowState.Maximized}">
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
          </DataTrigger>
        </Style.Triggers>
      </Style>
    </Border.Style>
    <Grid>
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border>
          <Grid controlzex:NonClientControlProperties.HitTestResult="CAPTION" Background="Transparent">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image
              Height="16"
              Margin="8,0,4,0"
              VerticalAlignment="Center"
              Source="{Binding IconSource}"
              Stretch="Uniform" />
            <WindowsFormsHost
              x:Name="WinformsMenuHost"
              Grid.Column="1"
              VerticalAlignment="Center" />

            <controls:TitleFilePathDisplay
              Grid.Column="3"
              HorizontalAlignment="Center"
              behaviors:TitleBarClickPassthrough.Enable="True"
              controlzex:NonClientControlProperties.HitTestResult="CLIENT"
              controlzex:WindowChrome.IsHitTestVisibleInChrome="True"
              FullPath="{Binding Title}" />
            <Grid Grid.Column="4">

              <StackPanel
                VerticalAlignment="Center"
                Background="Transparent"
                Orientation="Horizontal">
                <StackPanel.Resources>
                  <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                    <Setter Property="Foreground" Value="{DynamicResource Frb.Brushes.Foreground.Subtle}" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Height" Value="32" />
                    <Setter Property="Width" Value="48" />
                    <Setter Property="themes:FrbButton.BorderCornerRadius" Value="0" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="controlzex:NonClientControlProperties.HitTestResult" Value="CLIENT" />
                    <Setter Property="Background" Value="Transparent" />
                    <Style.Triggers>
                      <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Frb.Brushes.Contrast01}" />
                        <Setter Property="Foreground" Value="{DynamicResource Frb.Brushes.Foreground}" />
                      </Trigger>
                      <DataTrigger Binding="{Binding IsActive, ElementName=Root}" Value="False">
                        <Setter Property="Foreground" Value="{DynamicResource Frb.Brushes.Foreground.Disabled}" />
                      </DataTrigger>
                    </Style.Triggers>
                  </Style>
                </StackPanel.Resources>
                <Button Click="OnMinimizeButtonClick">
                  <materialDesign:PackIcon Height="14" Kind="Minus" />
                </Button>

                <Button Click="OnMaximizeButtonClick">
                  <Button.Style>
                    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                      <Setter Property="Content">
                        <Setter.Value>
                          <materialDesign:PackIcon Height="14" Kind="Maximize" />
                        </Setter.Value>
                      </Setter>
                      <Style.Triggers>
                        <DataTrigger Binding="{Binding WindowState}" Value="{x:Static WindowState.Maximized}">
                          <Setter Property="Content">
                            <Setter.Value>
                              <materialDesign:PackIcon Height="16" Kind="WindowRestore" />
                            </Setter.Value>
                          </Setter>
                        </DataTrigger>
                      </Style.Triggers>
                    </Style>
                  </Button.Style>
                </Button>
                <Grid>
                  <Button Click="OnCloseButtonClick">
                    <materialDesign:PackIcon Height="16" Kind="Close" />
                    <Button.Style>
                      <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                        <Style.Triggers>
                          <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource Frb.Brushes.Error}" />
                          </Trigger>
                        </Style.Triggers>
                      </Style>
                    </Button.Style>
                  </Button>
                </Grid>
              </StackPanel>

              <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.Style>
                  <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                      <DataTrigger Binding="{Binding WindowState}" Value="{x:Static WindowState.Maximized}">
                        <Setter Property="Visibility" Value="Collapsed" />
                      </DataTrigger>
                    </Style.Triggers>
                  </Style>
                </Grid.Style>
                <Grid
                  Height="4"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Top"
                  controlzex:NonClientControlProperties.HitTestResult="TOP"
                  Background="Transparent" />

                <Grid
                  Width="4"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Stretch"
                  controlzex:NonClientControlProperties.HitTestResult="RIGHT"
                  Background="Transparent" />
                <Grid
                  Width="5"
                  Height="5"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  controlzex:NonClientControlProperties.HitTestResult="TOPRIGHT"
                  Background="Transparent" />
              </Grid>


            </Grid>

          </Grid>
        </Border>

        <controls:MainPanelControl
          Grid.Row="1"
          Margin="4,0,4,4"
          DataContext="{Binding MainPanelViewModel}"
          IsToolsVisible="{Binding IsToolsVisible}" />
      </Grid>
    </Grid>
  </Border>

</controlzex:WindowChromeWindow>