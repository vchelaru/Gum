<UserControl
  x:Class="Gum.Plugins.InternalPlugins.TreeView.FlatSearchListBox"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Gum.Plugins.InternalPlugins.TreeView"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:viewModels="clr-namespace:Gum.Plugins.InternalPlugins.TreeView.ViewModels"
  xmlns:wpf="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
  d:DataContext="{d:DesignInstance Type={x:Type viewModels:SearchItemViewModel},
                                   IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="300"
  mc:Ignorable="d">
  <UserControl.Resources>
    <local:ObjectToFluentIconConverter x:Key="FluentIconConverter" />
  </UserControl.Resources>
  <Grid>

    <ListBox x:Name="FlatList" PreviewMouseLeftButtonDown="FlatList_MouseLeftButtonDown">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <wpf:FluentIcon VerticalAlignment="Center" Icon="{Binding BackingObject, Converter={StaticResource FluentIconConverter}}" />
            <TextBlock
              Margin="4,0,0,0"
              VerticalAlignment="Center"
              Text="{Binding Display}" />
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</UserControl>
