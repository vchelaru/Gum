<UserControl
  x:Class="Gum.Plugins.AlignmentButtons.AnchorControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Gum.Plugins.AlignmentButtons"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:wpf="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
  HorizontalContentAlignment="Center"
  mc:Ignorable="d">
  <UserControl.Resources>
    <Style BasedOn="{StaticResource IconButton}" TargetType="{x:Type Button}" />
  </UserControl.Resources>



  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <Border
      Margin="0,0,8,0"
      BorderBrush="{DynamicResource Frb.Brushes.Contrast01}"
      BorderThickness="1"
      CornerRadius="4">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button
          Click="TopLeftButton_Click"
          Content="{wpf:FluentIcon Icon=ArrowUpLeft}"
          ToolTip="Anchor Top Left" />

        <Button
          Grid.Column="1"
          Click="TopButton_Click"
          Content="{wpf:FluentIcon Icon=ArrowUp}"
          ToolTip="Anchor Top" />
        <Button
          Grid.Column="2"
          Click="TopRightButton_Click"
          Content="{wpf:FluentIcon Icon=ArrowUpRight}"
          ToolTip="Anchor Top Right" />
        <Button
          Grid.Row="1"
          Grid.Column="0"
          Click="MiddleLeftButton_Click"
          Content="{wpf:FluentIcon Icon=ArrowLeft}"
          ToolTip="Anchor Left" />
        <Button
          Grid.Row="1"
          Grid.Column="1"
          Click="MiddleMiddleButton_Click"
          Content="{wpf:FluentIcon Icon=Stop}"
          ToolTip="Anchor Center" />
        <Button
          Grid.Row="1"
          Grid.Column="2"
          Click="MiddleRightButton_Click"
          Content="{wpf:FluentIcon Icon=ArrowRight}"
          ToolTip="Anchor Right" />
        <Button
          Grid.Row="2"
          Grid.Column="0"
          Click="BottomLeftButton_Click"
          Content="{wpf:FluentIcon Icon=ArrowDownLeft}"
          ToolTip="Anchor Bottom Left" />
        <Button
          Grid.Row="2"
          Grid.Column="1"
          Click="BottomMiddleButton_Click"
          Content="{wpf:FluentIcon Icon=ArrowDown}"
          ToolTip="Anchor Bottom" />
        <Button
          Grid.Row="2"
          Grid.Column="2"
          Click="BottomRightButton_Click"
          Content="{wpf:FluentIcon Icon=ArrowDownRight}"
          ToolTip="Anchor Bottom Right" />

      </Grid>

    </Border>


    <StackPanel Grid.Column="1">
      <Button
        x:Name="AnchorCenterHorizontally"
        Grid.Row="0"
        Grid.Column="3"
        Click="AnchorCenterHorizontally_Click">
        <Button.Content>
          <wpf:FluentIcon Icon="ArrowMinimizeVertical">
            <wpf:FluentIcon.LayoutTransform>
              <RotateTransform Angle="90" />
            </wpf:FluentIcon.LayoutTransform>
          </wpf:FluentIcon>
        </Button.Content>
        <Button.ToolTip>
          Anchor Center Horizontally
        </Button.ToolTip>
      </Button>
      <Button
        x:Name="AnchorCenterVertically"
        Grid.Row="1"
        Grid.Column="3"
        Click="AnchorCenterVertically_Click"
        Content="{wpf:FluentIcon Icon=ArrowMinimizeVertical}">
        <Button.ToolTip>
          Anchor Center Vertically
        </Button.ToolTip>
      </Button>
    </StackPanel>

  </Grid>


</UserControl>
