<UserControl
    x:Class="Gum.Plugins.Undos.UndoDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Gum.Plugins.Undos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:undos="clr-namespace:Gum.Plugins.InternalPlugins.Undos"
    d:DesignHeight="300"
    d:DesignSource="{d:DesignInstance Type=local:UndosViewModel,
                                      IsDesignTimeCreatable=False}"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <ListBox
            x:Name="ListBoxInstance"
            ItemsSource="{Binding HistoryItems}"
            PreviewMouseDown="ListBox_PreviewMouseDown"
            SelectedIndex="{Binding UndoIndex, Mode=OneWay}"
            SelectionChanged="HandleSelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Display}">

                        <TextBlock.Style>
                            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="{x:Type TextBlock}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding UndoOrRedo}" Value="{x:Static undos:UndoOrRedo.Redo}">
                                        <Setter Property="Foreground" Value="{DynamicResource Frb.Brushes.Foreground.Disabled}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

    </Grid>
</UserControl>
