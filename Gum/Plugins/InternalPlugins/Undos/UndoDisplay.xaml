<UserControl
    x:Class="Gum.Plugins.Undos.UndoDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Gum.Plugins.InternalPlugins.Undos.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Gum.Plugins.Undos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:UndoOrRedoToBrushConverter x:Key="UndoOrRedoToBrushConverter" />
    </UserControl.Resources>
    <Grid>
        <ListBox
            x:Name="ListBoxInstance"
            ItemsSource="{Binding HistoryItems}"
            PreviewMouseDown="ListBox_PreviewMouseDown"
            SelectedIndex="{Binding UndoIndex, Mode=OneWay}"
            SelectionChanged="HandleSelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Foreground="{Binding UndoOrRedo, Converter={StaticResource UndoOrRedoToBrushConverter}}" Text="{Binding Display}" />
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

    </Grid>
</UserControl>
