<UserControl
    x:Class="Gum.Plugins.InternalPlugins.Errors.Views.ErrorTabHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Gum.Plugins.InternalPlugins.Errors.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Canvas Width="10" Height="10">
            <!--  Red circle with a radius of 5 pixels  -->
            <Ellipse
                x:Name="CircleInstance"
                Width="10"
                Height="10"
                Fill="Red" />
        </Canvas>
        <Label x:Name="LabelInstance" Margin="0,-4">Errors: x</Label>
    </StackPanel>
</UserControl>
