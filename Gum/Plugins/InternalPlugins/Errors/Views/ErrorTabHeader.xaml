<UserControl
    x:Class="Gum.Plugins.InternalPlugins.Errors.Views.ErrorTabHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:errors="clr-namespace:Gum.Plugins.Errors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance d:Type={x:Type errors:AllErrorsViewModel},
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">

        <Ellipse Width="10" Height="10">
            <Ellipse.Style>
                <Style TargetType="{x:Type Ellipse}">
                    <Setter Property="Fill" Value="{DynamicResource Frb.Brushes.Error}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Errors.Count}" Value="0">
                            <Setter Property="Fill" Value="{DynamicResource Frb.Brushes.Success}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Ellipse.Style>
        </Ellipse>

        <Label
            x:Name="LabelInstance"
            Margin="0,-4"
            Content="{Binding CountDescription}" />

    </StackPanel>
</UserControl>
