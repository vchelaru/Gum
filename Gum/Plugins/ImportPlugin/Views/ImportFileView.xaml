<UserControl
    x:Class="Gum.Plugins.ImportPlugin.Views.ImportFileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Gum.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:Gum.Services.Dialogs"
    xmlns:local="clr-namespace:Gum.Plugins.ImportPlugin.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Gum.Plugins.ImportPlugin.ViewModel"
    Width="550"
    Height="350"
    d:DataContext="{d:DesignInstance Type={x:Type viewmodels:ImportBaseDialogViewModel},
                                     IsDesignTimeCreatable=False}"
    dialogs:Dialog.DialogTitle="{Binding Title}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="5,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Filter:" />
            <TextBox
                x:Name="SearchTextBox"
                Grid.Column="1"
                Margin="5"
                PreviewKeyDown="TextBox_PreviewKeyDown"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <ListBox
            x:Name="ListBoxInstance"
            Grid.Row="1"
            Margin="5,0,5,5"
            behaviors:ListBoxDoubleClick.Command="{Binding AffirmativeCommand}"
            behaviors:SelectedItemsBehavior.SelectedItems="{Binding SelectedFiles}"
            ItemsSource="{Binding FilteredFiles}"
            SelectionMode="Extended" />
        <TextBlock
            Grid.Row="2"
            Margin="5,0,5,5"
            FontSize="10"
            TextWrapping="Wrap">
            The list above shows all files in the project folder not yet imported.<LineBreak />
            To add files from outside of the project folder, click the Browse button. Files from outside of the content folder will be copied to the content folder.</TextBlock>

    </Grid>
    <dialogs:Dialog.AuxiliaryActions>
        <Button Command="{Binding BrowseCommand}" Content="Browse..." />
    </dialogs:Dialog.AuxiliaryActions>
</UserControl>
