<UserControl
    x:Class="Gum.Controls.TitleFilePathDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Gum.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Gum.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border VerticalAlignment="Center" BorderThickness="1">
        <TextBlock
            Margin="6,4"
            VerticalAlignment="Center"
            Text="{Binding FileName, ElementName=root}"
            TextTrimming="CharacterEllipsis"
            ToolTip="{Binding FullPath, ElementName=root}"
            ToolTipService.InitialShowDelay="100">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        Click="OnViewInExplorerClick"
                        Header="View in explorer" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>
    </Border>
</UserControl>
