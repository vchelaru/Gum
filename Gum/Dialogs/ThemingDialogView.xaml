<UserControl
  x:Class="Gum.Dialogs.ThemingDialogView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:colorPicker="clr-namespace:ColorPicker;assembly=ColorPicker"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:dialogs="clr-namespace:Gum.Services.Dialogs"
  xmlns:local="clr-namespace:Gum.Dialogs"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:wpf="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
  d:DesignHeight="400"
  d:DesignSource="{d:DesignInstance Type=local:ThemingDialogViewModel,
                                    IsDesignTimeCreatable=False}"
  d:DesignWidth="400"
  dialogs:Dialog.DialogTitle="Theming"
  mc:Ignorable="d">
  <UserControl.Resources />
  <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="16">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <!--  Theme Mode  -->
      <Label
        Grid.Row="0"
        Grid.Column="0"
        MinWidth="64"
        Margin="0,0,16,8"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Content="Theme Mode" />

      <ComboBox
        Grid.Row="0"
        Grid.Column="1"
        Grid.ColumnSpan="2"
        Margin="0,0,0,8"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        ItemsSource="{Binding ThemeModes}"
        SelectedItem="{Binding Mode}" />

      <!--  Accent Color  -->
      <Label
        Grid.Row="1"
        Grid.Column="0"
        Margin="0,0,16,8"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Content="Accent Color" />

      <colorPicker:PortableColorPicker
        Grid.Row="1"
        Grid.Column="1"
        Height="16"
        Margin="0,0,8,8"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        SelectedColor="{Binding AccentColor, Mode=TwoWay}" />

      <Button
        Grid.Row="1"
        Grid.Column="2"
        Margin="0,0,0,8"
        Command="{Binding ResetCommand}"
        CommandParameter="AccentColor"
        Content="{wpf:FluentIcon Icon=ArrowReset}"
        Style="{StaticResource IconButton.Inline}"
        Visibility="{Binding HasExplicitAccentColor, Converter={StaticResource BoolToVisibilityHiddenConverter}}" />

      <!--  Checker A Color  -->
      <Label
        Grid.Row="2"
        Grid.Column="0"
        Margin="0,0,16,8"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Content="Checker A Color" />

      <colorPicker:PortableColorPicker
        Grid.Row="2"
        Grid.Column="1"
        Height="16"
        Margin="0,0,8,8"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        SelectedColor="{Binding CheckerAColor, Mode=TwoWay}" />

      <Button
        Grid.Row="2"
        Grid.Column="2"
        Margin="0,0,0,8"
        Command="{Binding ResetCommand}"
        CommandParameter="CheckerAColor"
        Content="{wpf:FluentIcon Icon=ArrowReset}"
        Style="{StaticResource IconButton.Inline}"
        Visibility="{Binding HasExplicitCheckerAColor, Converter={StaticResource BoolToVisibilityHiddenConverter}}" />

      <!--  Checker B Color  -->
      <Label
        Grid.Row="3"
        Grid.Column="0"
        Margin="0,0,16,8"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Content="Checker B Color" />

      <colorPicker:PortableColorPicker
        Grid.Row="3"
        Grid.Column="1"
        Height="16"
        Margin="0,0,8,8"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        SelectedColor="{Binding CheckerBColor, Mode=TwoWay}" />

      <Button
        Grid.Row="3"
        Grid.Column="2"
        Margin="0,0,0,8"
        Command="{Binding ResetCommand}"
        CommandParameter="CheckerBColor"
        Content="{wpf:FluentIcon Icon=ArrowReset}"
        Style="{StaticResource IconButton.Inline}"
        Visibility="{Binding HasExplicitCheckerBColor, Converter={StaticResource BoolToVisibilityHiddenConverter}}" />

      <!--  Outline Color  -->
      <Label
        Grid.Row="4"
        Grid.Column="0"
        Margin="0,0,16,8"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Content="Outline Color" />

      <colorPicker:PortableColorPicker
        Grid.Row="4"
        Grid.Column="1"
        Height="16"
        Margin="0,0,8,8"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        SelectedColor="{Binding OutlineColor, Mode=TwoWay}" />

      <Button
        Grid.Row="4"
        Grid.Column="2"
        Margin="0,0,0,8"
        Command="{Binding ResetCommand}"
        CommandParameter="OutlineColor"
        Content="{wpf:FluentIcon Icon=ArrowReset}"
        Style="{StaticResource IconButton.Inline}"
        Visibility="{Binding HasExplicitOutlineColor, Converter={StaticResource BoolToVisibilityHiddenConverter}}" />

      <!--  Guide Line Color  -->
      <Label
        Grid.Row="5"
        Grid.Column="0"
        Margin="0,0,16,8"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Content="Guide Line Color" />

      <colorPicker:PortableColorPicker
        Grid.Row="5"
        Grid.Column="1"
        Height="16"
        Margin="0,0,8,8"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        SelectedColor="{Binding GuideLineColor, Mode=TwoWay}" />

      <Button
        Grid.Row="5"
        Grid.Column="2"
        Margin="0,0,0,8"
        Command="{Binding ResetCommand}"
        CommandParameter="GuideLineColor"
        Content="{wpf:FluentIcon Icon=ArrowReset}"
        Style="{StaticResource IconButton.Inline}"
        Visibility="{Binding HasExplicitGuideLineColor, Converter={StaticResource BoolToVisibilityHiddenConverter}}" />

      <!--  Guide Text Color  -->
      <Label
        Grid.Row="6"
        Grid.Column="0"
        Margin="0,0,16,8"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        Content="Guide Text Color" />

      <colorPicker:PortableColorPicker
        Grid.Row="6"
        Grid.Column="1"
        Height="16"
        Margin="0,0,8,8"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        SelectedColor="{Binding GuideTextColor, Mode=TwoWay}" />

      <Button
        Grid.Row="6"
        Grid.Column="2"
        Margin="0,0,0,8"
        Command="{Binding ResetCommand}"
        CommandParameter="GuideTextColor"
        Content="{wpf:FluentIcon Icon=ArrowReset}"
        Style="{StaticResource IconButton.Inline}"
        Visibility="{Binding HasExplicitGuideTextColor, Converter={StaticResource BoolToVisibilityHiddenConverter}}" />

      <!--  Reset All Button  -->
      <Button
        Grid.Row="7"
        Grid.Column="0"
        Margin="0,16,0,0"
        Command="{Binding ResetCommand}"
        CommandParameter="{x:Null}"
        Content="Reset All" />
    </Grid>
  </ScrollViewer>
</UserControl>
