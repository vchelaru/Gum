<UserControl
    x:Class="TextureCoordinateSelectionPlugin.Views.MainControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TextureCoordinateSelectionPlugin.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:specializedxnacontrols="clr-namespace:FlatRedBall.SpecializedXnaControls;assembly=FlatRedBall.SpecializedXnaControls"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">

            <Button
                x:Name="MinusButton"
                MinWidth="24"
                materialDesign:RippleAssist.IsDisabled="True"
                Click="HandleMinusClicked"
                Content="-"
                Style="{StaticResource MaterialDesignToolForegroundButton}" />
            <ComboBox ItemsSource="{Binding AvailableZoomLevels}" SelectedItem="{Binding SelectedZoomLevel}" />
            <Button
                x:Name="PlusButton"
                MinWidth="24"
                materialDesign:RippleAssist.IsDisabled="True"
                Click="HandlePlusClicked"
                Content="+"
                Style="{StaticResource MaterialDesignToolForegroundButton}" />


            <CheckBox
                Margin="16,0,0,0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                IsChecked="{Binding IsSnapToGridChecked}">
                Snap to grid
            </CheckBox>
            <ComboBox
                Width="100"
                Margin="10,0,0,0"
                IsEnabled="{Binding IsSnapToGridComboBoxEnabled}"
                ItemsSource="{Binding AvailableSnapToGridValues}"
                SelectedItem="{Binding SelectedSnapToGridValue}" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <WindowsFormsHost KeyDown="HandleKeyDown">
                <specializedxnacontrols:ImageRegionSelectionControl x:Name="InnerControl" />
            </WindowsFormsHost>
            <ScrollBar x:Name="VerticalScrollBar" Grid.Column="1" />
            <ScrollBar
                x:Name="HorizontalScrollBar"
                Grid.Row="1"
                Orientation="Horizontal" />
        </Grid>
    </Grid>
</UserControl>
