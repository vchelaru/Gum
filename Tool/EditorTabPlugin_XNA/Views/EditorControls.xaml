<UserControl x:Class="EditorTabPlugin_XNA.Views.EditorControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorTabPlugin_XNA.Views"
             mc:Ignorable="d" >
    <Grid VerticalAlignment="Top" HorizontalAlignment="Left">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Content="-" Width="20" Command="{Binding ZoomOutCommand}"/>
        <ComboBox Grid.Column="1" Width="100"
                  SelectedItem="{Binding PercentZoomLevel}"
                  ItemsSource="{Binding ZoomLevels}"
                  DisplayMemberPath="ZoomDisplay"
                  />
        <Button Grid.Column="2" Width="20" Content="+" Command="{Binding ZoomInCommand}"/>

    </Grid>
</UserControl>
