<UserControl
    x:Class="WpfDataUi.Controls.ComboBoxDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="26"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding FirstGridLength}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label x:Name="Label" VerticalAlignment="Center">Property Label:</Label>
        <ComboBox
            x:Name="ComboBox"
            Grid.Column="1"
            Height="22"
            MinWidth="60"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            SelectionChanged="ComboBox_SelectionChanged"
            TextBlock.Foreground="{Binding DesiredForegroundBrush}">
            <ComboBox.ContextMenu>
                <ContextMenu />
            </ComboBox.ContextMenu>
        </ComboBox>
    </Grid>
</UserControl>
