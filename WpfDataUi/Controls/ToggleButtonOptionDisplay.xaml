<UserControl
    x:Class="WpfDataUi.Controls.ToggleButtonOptionDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:WpfDataUi.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDataUi.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="Auto"
    Margin="0,4,0,4"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:AddDoubleConverter x:Key="AddDoubleConverter" />
    </UserControl.Resources>
    <!--<StackPanel>-->

    <Grid x:Name="Grid" HorizontalAlignment="Left">
        <Grid.ContextMenu>
            <ContextMenu />
        </Grid.ContextMenu>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="FirstColumn" Width="{Binding FirstGridLength}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="Label"
            MinWidth="100"
            Padding="4"
            VerticalAlignment="Center"
            TextWrapping="Wrap">
            Property Label:
        </TextBlock>
        <WrapPanel
            x:Name="ButtonWrapPanel"
            Grid.Column="1"
            ItemHeight="{Binding ActualHeight, ElementName=Label}"
            ItemWidth="{Binding ActualHeight, ElementName=Label}"
            Orientation="Horizontal" />
        <TextBlock
            x:Name="HintTextBlock"
            Grid.Row="1"
            Margin="0,0,-4,0"
            Padding="8,0,0,0"
            FontSize="{Binding Path=FontSize, RelativeSource={RelativeSource AncestorType={x:Type local:ToggleButtonOptionDisplay}}, Converter={StaticResource AddDoubleConverter}, ConverterParameter=-2}"
            TextWrapping="Wrap">
            This is a property description.
        </TextBlock>
    </Grid>
    <!--
  </StackPanel>-->
</UserControl>
