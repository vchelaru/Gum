<UserControl
    x:Class="WpfDataUi.Controls.TextBoxDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:WpfDataUi.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDataUi.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Width="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:AddDoubleConverter x:Key="AddDoubleConverter" />
    </UserControl.Resources>
    <StackPanel x:Name="StackPanel">
        <StackPanel.ContextMenu>
            <ContextMenu />
        </StackPanel.ContextMenu>
        <Grid x:Name="TopRowGrid" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Name="FirstColumn" Width="{Binding FirstGridLength}" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition x:Name="DefaultTopRow" Height="Auto" />
                <RowDefinition x:Name="RowForAboveBelowDisplay" Height="Auto" />
                <RowDefinition x:Name="PropertyDescriptionRow" Height="Auto" />

            </Grid.RowDefinitions>

            <TextBlock
                x:Name="Label"
                MinWidth="100"
                Padding="4,4,4,0"
                VerticalAlignment="Center"
                MouseDown="Label_MouseDown"
                MouseMove="Label_MouseMove"
                MouseUp="Label_MouseUp"
                TextWrapping="Wrap">
                Property Label:
            </TextBlock>
            <TextBox
                x:Name="TextBox"
                Grid.Column="1"
                MinWidth="60"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                GotFocus="TextBox_GotFocus"
                LostFocus="TextBox_LostFocus_1">
                <TextBox.ContextMenu>
                    <ContextMenu />
                </TextBox.ContextMenu>
            </TextBox>
            <TextBlock
                x:Name="PlaceholderText"
                Grid.Column="1"
                Margin="3,0,3,0"
                VerticalAlignment="Center"
                Foreground="Gray"
                IsHitTestVisible="False">
                Placeholder
            </TextBlock>
            <StackPanel
                x:Name="AfterTextBoxUi"
                Grid.Column="2"
                VerticalAlignment="Stretch"
                Orientation="Horizontal">
                <CheckBox
                    x:Name="NullableCheckBox"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Checked="NullableCheckBox_Checked"
                    Content="Is Null"
                    Unchecked="NullableCheckBox_Unchecked" />
            </StackPanel>
        </Grid>
        <TextBlock
            x:Name="HintTextBlock"
            MaxWidth="{Binding ActualWidth, ElementName=TopRowGrid}"
            Margin="0,0,-4,0"
            Padding="8,1,0,4"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="{Binding Path=FontSize, RelativeSource={RelativeSource AncestorType={x:Type local:TextBoxDisplay}}, Converter={StaticResource AddDoubleConverter}, ConverterParameter=-2}"
            Text="This is a property description. But what if it is longer?"
            TextWrapping="Wrap" />


    </StackPanel>
</UserControl>
