<UserControl
    x:Class="StateAnimationPlugin.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
    xmlns:views="clr-namespace:StateAnimationPlugin.Views"
    d:DesignHeight="580"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="24" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="Auto" MinWidth="40" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="PlayStopButton"
                Width="25"
                Height="25"
                HorizontalAlignment="Right"
                Click="HandlePlayStopClicked"
                Visibility="{Binding PlayButtonVisibility}">
                <Image x:Name="ButtonImage" Source="{Binding ButtonBitmapFrame}" />
            </Button>
            <Slider
                Grid.Row="1"
                Grid.Column="1"
                Maximum="{Binding SelectedAnimation.Length}"
                Minimum="0"
                TickFrequency="1"
                TickPlacement="BottomRight"
                Value="{Binding DisplayedAnimationTime}" />

            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                Text="{Binding DisplayedAnimationTime}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="3"
                Margin="0,0,5,0"
                VerticalAlignment="Bottom"
                Text="{Binding OverLengthTime}" />
            <!--<views:TimedStateMarkerDisplay Grid.Column="1"
                                               RangeMaximum="{Binding SelectedAnimation.Length}"
                                               MarkerItemSource="{Binding SelectedAnimation.Keyframes}"
                                               SelectedKeyframe="{Binding SelectedAnimation.SelectedKeyframe}" Grid.Row="1"/>-->
            <skia:SKElement
                x:Name="LeftSkiaElement"
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Stretch"
                PaintSurface="LeftSkiaElement_PaintSurface" />

            <skia:SKElement
                x:Name="SkiaElement"
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Stretch"
                MouseLeftButtonDown="SkiaElement_MouseLeftButtonDown"
                MouseMove="SkiaElement_MouseMove"
                PaintSurface="SKElement_PaintSurface" />
            <Grid
                Grid.Row="0"
                Grid.Column="1"
                Margin="2,0,0,0"
                HorizontalAlignment="Left">
                <Button IsHitTestVisible="False" />
                <StackPanel
                    Margin="3,0,3,0"
                    VerticalAlignment="Stretch"
                    Orientation="Horizontal">
                    <Button
                        Width="18"
                        Height="18"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="SpeedDecreaseClicked">
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Slow Down</TextBlock>
                                    <TextBlock>Reudces game speed (makes it run in slow-motion)</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                        <Image Source="/StateAnimationPlugin;component/Resources/icon_minus.png" />
                    </Button>
                    <Image
                        Height="16"
                        Margin="0,0,-3,0"
                        Source="/StateAnimationPlugin;component/Resources/SlowMotion.png" />
                    <TextBlock
                        MinWidth="40"
                        Margin="0,0,2,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding CurrentGameSpeed, FallbackValue=100%}"
                        TextAlignment="Center" />
                    <Button
                        Width="18"
                        Height="18"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="SpeedIncreaseClicked">
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">Speed Up</TextBlock>
                                    <TextBlock>Increases game speed (makes it run in fast-forward)</TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                        <Image Source="/StateAnimationPlugin;component/Resources/icon_plus.png" />
                    </Button>
                </StackPanel>

            </Grid>


        </Grid>

        <GridSplitter
            Grid.Row="1"
            Height="5"
            HorizontalAlignment="Stretch"
            ResizeBehavior="PreviousAndNext" />

        <Grid x:Name="BottomGrid" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ListBox
                    ItemsSource="{Binding Animations}"
                    PreviewKeyDown="HandleAnimationListKeyPressed"
                    SelectedItem="{Binding SelectedAnimation}">
                    <ListBox.ContextMenu>
                        <ContextMenu x:Name="AnimationContextMenu" ItemsSource="{Binding AnimationRightClickItems}" />
                    </ListBox.ContextMenu>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Click="LoopToggleClick">
                                    <Image Source="{Binding ButtonBitmapFrame}" />
                                </Button>
                                <Label Content="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button
                    x:Name="AddAnimationButton"
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    Click="AddAnimationButton_Click">
                    Add Animation
                </Button>
            </Grid>

            <GridSplitter
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Stretch"
                DragCompleted="GridSplitter_DragCompleted" />

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  State List Box  -->
                <ListBox
                    ItemsSource="{Binding SelectedAnimation.Keyframes}"
                    KeyDown="HandleAnimationKeyframeListBoxKey"
                    SelectedItem="{Binding SelectedAnimation.SelectedKeyframe}">
                    <ListBox.ContextMenu>
                        <ContextMenu x:Name="AnimationStateContextMenu" ItemsSource="{Binding AnimationStateRightClickItems}" />
                    </ListBox.ContextMenu>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding IconBitmapFrame}" />
                                <Image Source="{Binding ExclamationIcon}" Visibility="{Binding UncategorizedIconVisibility}">
                                    <Image.ToolTip>
                                        <TextBlock>This state is uncategorized which can cause unexpected results due to only some variables being assigned. Consider using only categorized states.</TextBlock>
                                    </Image.ToolTip>
                                </Image>
                                <Label
                                    VerticalAlignment="Center"
                                    Content="{Binding DisplayString}"
                                    Foreground="{Binding LabelBrush}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
                <StackPanel Grid.Row="1">
                    <Button x:Name="AddStateButton" Click="AddStateKeyframeButton_Click">Add State</Button>
                    <Button
                        x:Name="AddSubAnimationButton"
                        Grid.Column="1"
                        Click="AddSubAnimationButton_Click">
                        Add Sub-animation
                    </Button>
                    <Button
                        x:Name="AddNamedEvent"
                        Grid.Column="1"
                        Click="AddNamedEventButton_Click">
                        Add Named Event
                    </Button>
                </StackPanel>
            </Grid>

            <views:StateView
                Grid.Column="3"
                Width="210"
                Margin="0,0,5,0"
                HorizontalAlignment="Left"
                DataContext="{Binding SelectedAnimation.SelectedKeyframe}" />

        </Grid>


    </Grid>
</UserControl>
