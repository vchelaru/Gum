<Window
    x:Class="StateAnimationPlugin.Views.SubAnimationSelectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add Sub-animation"
    Width="500"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  List boxes (top row)  -->
        <ListBox
            x:Name="ContainersListBox"
            ItemsSource="{Binding AnimationContainers}"
            SelectedItem="{Binding SelectedContainer}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox
            x:Name="AnimationsListBox"
            Grid.Column="1"
            ItemsSource="{Binding Animations}"
            SelectedItem="{Binding SelectedAnimation}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--  Buttons at the bottom  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button Width="100" Click="OkClick">OK</Button>
            <Button Width="100" Click="CancelClick">Cancel</Button>

        </StackPanel>

    </Grid>
</Window>
