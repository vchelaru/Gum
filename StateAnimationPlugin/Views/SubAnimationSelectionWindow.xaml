<UserControl
    x:Class="StateAnimationPlugin.Views.SubAnimationSelectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:Gum.Behaviors;assembly=Gum"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:Gum.Services.Dialogs;assembly=Gum"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:StateAnimationPlugin.ViewModels"
    Width="500"
    Height="300"
    d:DataContext="{d:DesignInstance Type={x:Type viewmodels:SubAnimationSelectionDialogViewModel},
                                     IsDesignTimeCreatable=False}"
    dialogs:Dialog.DialogTitle="Add Sub-Animation"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ListBox
            x:Name="ContainersListBox"
            ItemsSource="{Binding AnimationContainers}"
            SelectedItem="{Binding SelectedContainer}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox
            x:Name="AnimationsListBox"
            Grid.Column="1"
            behaviors:ListBoxDoubleClick.Command="{Binding AffirmativeCommand}"
            ItemsSource="{Binding Animations}"
            SelectedItem="{Binding SelectedAnimation}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>
